%% 定理类环境定义
%% 定理
\newcounter{thm@theorem}[chapter]
\renewcommand\thethm@theorem{\thechapter.\arabic{thm@theorem}}
\def\@theoremname{定理}%
\NewEnviron{theorem}[1][{}]{%
  \list{}{%
    \topsep       2\p@\@plus\p@
    \itemsep      \z@
    \parsep       \z@
    \itemindent   2\ccwd
    \listparindent\itemindent
    \leftmargin   \z@
    \rightmargin  \z@}%
    \item\relax\refstepcounter{thm@theorem}%
    \begingroup
      \heiti\@theoremname\thethm@theorem
      \ifstrempty{#1}{}{: #1}\quad
    \endgroup
    \kaiti\BODY
  \endlist}
